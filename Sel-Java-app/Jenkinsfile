pipeline {
    agent any

    tools {
        jdk 'Java11'
        maven 'Maven'
    }

    environment {
        DOCKER_IMAGE = 'deepakjava/sel-java-app:latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Deepak-1369/Sel-Java-app.git',
                    branch: 'main',
                    credentialsId: 'github-creds'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Docker Push') {
            steps {
                sh "docker push ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
