pipeline {
    agent any

    tools {
        jdk 'Java11'   // Make sure this matches the name of your JDK in Jenkins
        maven 'Maven'  // Make sure this matches the Maven installation name in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/Deepak-1369/Sel-Java-app.git',
                    credentialsId: 'github-creds',
                    branch: 'main'
                )
            }
        }

        stage('Build') {
            steps {
                // Navigate to the folder that contains pom.xml
                 dir('Sel-Java-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Docker Build') {
            steps {
                // Example: build docker image only if Maven build succeeded
                sh 'docker build -t java-app-image:latest .'
            }
        }

        stage('Docker Push') {
            steps {
                sh 'docker push java-app-image:latest'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
