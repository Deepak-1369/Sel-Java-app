pipeline {
    agent any

    tools {
        maven 'Mavan'      // must match Jenkins Global Tool name
        jdk 'java11'       // must match Jenkins Global Tool name
    }

    environment {
        IMAGE_NAME = "deepakjava/sel-java-app"
        TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Deepak-1369/Sel-Java-app.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Build') {
            steps {
                dir('Sel-Java-app') {
                sh 'mvn clean package'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('Sel-Java-app') {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                    mvn sonar:sonar \
                    -Dsonar.projectKey=sel-java-app \
                    -Dsonar.projectName=sel-java-app
                    '''
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('Sel-Java-app') {
                sh 'docker build -t $IMAGE_NAME:$TAG .'
                }
            }
        }

        stage('Docker Push') {
            steps {
                withDockerRegistry(
                    [url: 'https://index.docker.io/v1/', credentialsId: 'dockerhub-creds']
                ) {
                    sh 'docker push $IMAGE_NAME:$TAG'
                }
            }
        }
    }
}
